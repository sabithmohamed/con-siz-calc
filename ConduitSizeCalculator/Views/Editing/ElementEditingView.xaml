<UserControl
    x:Class="Idibri.RevitPlugin.ConduitSizeCalculator.Views.ElementEditingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:Idibri.RevitPlugin.ConduitSizeCalculator.Views"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Idibri.RevitPlugin.Common;component/Resources/GlobalStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Specific Styles  -->
            <Style
                x:Key="ColumnHeaderStyle"
                BasedOn="{StaticResource TextBlockBaseStyle}"
                TargetType="TextBlock">
                <Setter Property="Margin" Value="0,0,0,5" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
            <Style
                x:Key="RowHeaderStyle"
                BasedOn="{StaticResource TextBlockBaseStyle}"
                TargetType="TextBlock">
                <Setter Property="Margin" Value="0,0,5,0" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Margin="42,0,0,0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource RowHeaderStyle}"
                    Text="Workset" />
                <ComboBox
                    Grid.Row="0"
                    Grid.Column="1"
                    DisplayMemberPath="WorksetName"
                    ItemsSource="{Binding CommandSettings.WorksetToCableScheduleMap.Pairs}"
                    SelectedItem="{Binding WorksetCableSchedulePair, Mode=TwoWay}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Style="{StaticResource RowHeaderStyle}"
                    Text="Cable Schedule" />
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="1"
                    ItemsSource="{Binding CommandSettings.CableSchedule.CableGroups}"
                    SelectedItem="{Binding WorksetCableSchedulePair.CableSchedule, Mode=TwoWay}" />

                <!--#region Added Mark field. Not working. WIP-->

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Style="{StaticResource RowHeaderStyle}"
                    Text="Mark" />
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <TextBox
                        MinWidth="115" Width="Auto"
                        HorizontalAlignment="Left"
                        Text="{Binding MarkText, Mode=TwoWay}" />
                    <Button
                        Command="{Binding SetMarkCommand}"
                        ToolTipService.ToolTip="Commit Changes"
                        Visibility="{Binding ViewMode, ConverterParameter='EditElements'}">
                        <Image
                            Width="16"
                            Height="16"
                            Source="pack://application:,,,/ConduitSizeCalculator;component/Resources/Icons/Fam3/tick.png" />
                    </Button>
                </StackPanel>

                <!--#endregion-->
            </Grid>

            <Grid
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="125" />
                    <ColumnDefinition Width="125" />
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition Width="125" />
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition Width="125" />
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition Width="125" />
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition Width="125" />
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource ColumnHeaderStyle}"
                    Text="Fill" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="3"
                    Style="{StaticResource ColumnHeaderStyle}"
                    Text="Conduit Type" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="5"
                    Style="{StaticResource ColumnHeaderStyle}"
                    Text="Size" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="7"
                    Style="{StaticResource ColumnHeaderStyle}"
                    Text="Conduit Destination" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="9"
                    Style="{StaticResource ColumnHeaderStyle}"
                    Text="Cable Destination" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="11"
                    Style="{StaticResource ColumnHeaderStyle}"
                    Text="% Full" />

                <view:ConduitEditingView
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="12"
                    DataContext="{Binding Conduit1}"
                    RowHeader="1" 
                    Visibility="{Binding Available}"/>
                <view:ConduitEditingView
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="12"
                    DataContext="{Binding Conduit2}"
                    Loaded="ConduitEditingView_Loaded"
                    RowHeader="2" />
                <view:ConduitEditingView
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="12"
                    DataContext="{Binding Conduit3}"
                    RowHeader="3" />
                <view:ConduitEditingView
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="12"
                    DataContext="{Binding Conduit4}"
                    RowHeader="4" />
                <view:ConduitEditingView
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="12"
                    DataContext="{Binding Conduit5}"
                    RowHeader="5" />
                <view:ConduitEditingView
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="12"
                    DataContext="{Binding Conduit6}"
                    RowHeader="6" />
            </Grid>

            <view:BoxEditingView
                Grid.Row="2"
                Grid.Column="0"
                Margin="0,15"
                DataContext="{Binding BoxViewModel}" />

            <Grid
                Grid.Row="3"
                Grid.Column="0"
                Margin="0,3,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center">
                    <Run Text="{Binding Elements.Count, Mode=OneWay}" />
                    <Run Text=" Element(s)" />
                </TextBlock>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
